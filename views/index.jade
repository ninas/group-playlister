extends layout

block content
  div(class="row")
    div(class="col-md-12")
      h1= title
  form(class="form-inline row", role="form")
    div(class="form-group col-md-4" id="groupInputGroup")
      div(class="input-group input-group-lg") 
        span(class="input-group-addon") Facebook group 
        input(type='text', class="form-control", placeholder="group id", id='groupName')
    span(class="padding col-md-1")
      button(class="btn btn-primary btn-lg", id="playButton") Play!
  div(class="row")
    div(class="col-md-4 text-right error-text-red")
      strong(id="groupNameAlert")
