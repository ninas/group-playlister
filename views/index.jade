extends layout

block content
  div(class="row")
    div(class="col-md-12")
      h1 Group Playlister
  div(class="col-md-4" id="groupInputGroup")
    span Facebook group 
    if groupName
      input(type='text', class="typeahead", placeholder="group id", id='groupName', value= groupName)
    else
      input(type='text', class="typeahead", placeholder="group id", id='groupName')
  span(class="padding col-md-1")
      button(class="btn btn-primary btn-lg", id="playButton") Play!
  div(class="row")
    div(class="col-md-4 text-right error-text-red")
      strong(id="groupNameAlert")
  div(class="row")
    div(id="fullGroupName")
    div(id="groupDescription")
  div(class="row")
    div(class="col-md-8")
      div(id="youtube")
      div(id="soundcloud")



    ul(class="col-md-4", id="playlist")
